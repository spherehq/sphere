// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/typescript-node-lts
{
  "name": "Sphere Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "docker-in-docker",
  "workspaceFolder": "/workspace",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/zsh"
  },
  "postCreateCommand": "cp /workspace/.devcontainer/.zshrc ~/.zshrc",
  "runArgs": [
    "-v",
    "/var/run/docker.sock:/var/run/docker.sock",
    "projectname-bashhistory:/root/commandhistory"
  ],
  "extensions": ["ms-vscode.vscode-typescript-tslint-plugin"]
}

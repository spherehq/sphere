enum AccountStatus {
  VERIFIED # SUPER AWESOME STATUS
  ACTIVE
  INACTIVE
}

type Credential {
  id: ID! @id
  secret: String!
}

type Account {
  id: ID! @id
  status: AccountStatus! @default(value: INACTIVE)
  firstName: String!
  lastName: String!
  emailAddress: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  spheres: [Sphere!]
    @relation(name: "AccountAssociatedWithSphere", onDelete: CASCADE)
  posts: [Post!]!
  credential: Credential! @relation(name: "AccountCredential", onDelete: CASCADE)
}

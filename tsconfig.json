{
  "compilerOptions": {
    "pretty": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "react",
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es7"]
  },
  "filesGlob": ["**/**/*.ts", "**/**/*.tsx"],
  "exclude": ["node_modules/**/*"]
}
